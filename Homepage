                    </p>
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-24">
                        <a href={`mailto:${resumeData.contact.email}`} className="bg-white/5 hover:bg-white/10 border border-white/10 p-8 rounded-[32px] group transition-all">
                            <Mail size={32} className="mx-auto mb-4 text-blue-400" />
                            <p className="text-xs font-black uppercase tracking-widest text-zinc-500 mb-2">Email</p>
                            <p className="text-lg font-bold">{resumeData.contact.email}</p>
                        </a>
                        <a href="tel:+15199654327" className="bg-white/5 hover:bg-white/10 border border-white/10 p-8 rounded-[32px] group transition-all">
                            <Phone size={32} className="mx-auto mb-4 text-green-400" />
                            <p className="text-xs font-black uppercase tracking-widest text-zinc-500 mb-2">Phone</p>
                            <p className="text-lg font-bold">{resumeData.contact.phone}</p>
                        </a>
                    </div>
                    <div className="pt-24 border-t border-white/5 flex flex-col md:flex-row items-center justify-between gap-8 text-[10px] font-black uppercase tracking-[0.3em] text-zinc-600">
                        <p>© {new Date().getFullYear()} Mohamed Safaaith</p>
                        <div className="flex gap-12">
                            <a href="#" className="hover:text-white transition-colors">LinkedIn</a>
                            <a href="#" className="hover:text-white transition-colors">Portfolio</a>
                        </div>
                    </div>
                </div>
            </footer>

            {/* Share and AI Assistant */}
            <div className="fixed bottom-6 left-6 z-[100] flex flex-col gap-3">
                 <button 
                    onClick={handleCopyLink}
                    className="bg-white border border-zinc-200 text-zinc-900 p-4 rounded-full shadow-2xl flex items-center gap-2 transition-all transform hover:scale-105 active:scale-95"
                >
                    {copied ? <Check size={18} className="text-green-500" /> : <Share2 size={18} className="text-zinc-500" />}
                    <span className="font-semibold text-sm pr-2 tracking-tight">{copied ? "Copied!" : "Share Profile"}</span>
                </button>
            </div>
            
            <AIChatBot />
        </div>
    );
}
